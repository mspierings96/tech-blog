<article class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>
        <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <div>
            {{post_text}}
        </div>
        <div>
        Posted by {{user.username}} on {{created_at}}
        </div>
    </div>
    <div class="card-body">
        {{body}}
    </div>
</article>
<div>
    <form class= "new-comment-form">
        <textarea name="comment-text"></textarea>
        <input name="post-id" type="hidden" value={{id}} />
        <button>Comment</button>
    </form>
</div>
<div>
    {{#each comments}}
    <h3>
        {{user.username}}
    </h3>
    <div>
        {{comment_text}}
    </div>
    <div>
        {{created_at}}
    </div>
    {{/each}}
</div>
<script src="/add-comment.js"></script>